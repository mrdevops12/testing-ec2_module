aws s3api put-object --bucket ${S3_BUCKET_NAME} --key use-cases/${USECASE_NAME}/data/
aws s3api put-object --bucket ${S3_BUCKET_NAME} --key use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/

aws s3 rm s3://$S3_BUCKET_NAME/use-cases/$USECASE_NAME/data/4000_OCR_PDFs/ \
  --recursive --exclude "*" --include "*.pdf" || true



aws s3api put-object --bucket ${S3_BUCKET_NAME} --key use-cases/${USECASE_NAME}/data/
aws s3api put-object --bucket ${S3_BUCKET_NAME} --key use-cases/${USECASE_NAME}/data/2000_IDAA_METADATA_JSONs/



aws s3 rm s3://$S3_BUCKET_NAME/use-cases/$USECASE_NAME/data/2000_IDAA_METADATA_JSONs/ \
  --recursive --exclude "*" --include "*.json" || true


aws s3 sync usecases/${USECASE_NAME}/data s3://${S3_BUCKET_NAME}/use-cases/${USECASE_NAME}/data --exclude "*" --include "*.pdf"

aws s3 sync usecases/${USECASE_NAME}/data/4000_OCR_PDFs/ \
  s3://$S3_BUCKET_NAME/use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/ \
  --exclude "*" --include "SFT.csv"


aws s3 sync usecases/${USECASE_NAME}/data/ \
  s3://$S3_BUCKET_NAME/use-cases/${USECASE_NAME}/data/ \
  --exclude "*" --include "4000_OCR_PDFs/SFT.csv"



aws s3 cp usecases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv \
  s3://$S3_BUCKET_NAME/use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv --only-show-errors


aws s3 cp "usecases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv" \
"s3://${S3_BUCKET_NAME}/use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv" \
--no-progress --only-show-errors || echo "⚠️ SFT.csv not found, skipping upload"



aws s3 cp "./usecases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv" "s3://${S3_BUCKET_NAME}/use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv" --no-progress --only-show-errors || echo "SFT.csv not found or path incorrect — skipping upload"

aws s3 cp usecases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv s3://${S3_BUCKET_NAME}/use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/ --no-progress --only-show-errors || echo "SFT.csv not found — skipping upload"


aws s3 cp "${GITHUB_WORKSPACE}/usecases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv" "s3://${S3_BUCKET_NAME}/use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv" --no-progress --only-show-errors || echo "SFT.csv not found — skipping upload"

aws s3 cp "usecases/corporatesite-genrock/data/4000_OCR_PDFs/SFT.csv" \
"s3://${S3_BUCKET_NAME}/use-cases/${USECASE_NAME}/data/4000_OCR_PDFs/SFT.csv" \
--no-progress --only-show-errors || echo "SFT.csv not found — skipping upload"


